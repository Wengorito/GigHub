@model IEnumerable<GigHub.Core.Models.Gig>
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Attendance Calendar</h1>

<ul id="calendar" class="gigs voffset4">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                    @if (gig.IsCanceled)
                    {
                        <span class="label label-warning">Cancelled</span>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                <button data-gig-id="@gig.Id" class="btn btn-danger btn-sm js-delete-attendance">Remove</button>
            </div>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function () {
            CalendarController.init("#calendar");
        });
    </script>
}